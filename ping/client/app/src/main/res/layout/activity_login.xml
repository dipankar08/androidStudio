<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:background="@drawable/bg_login"
        android:layout_width="match_parent"
        android:tint="#ff000000"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="match_parent"
        android:src="#aa000000"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:paddingBottom="60dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:background="#ee000000"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_handshake_42"
            android:layout_height="wrap_content" />
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:layout_width="wrap_content"
            android:textColor="#27ae60"
            app:customfont="IndieFlower.ttf"
            android:text="PING"
            android:textSize="22dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:id="@+id/tv_quick_login"
            android:layout_width="wrap_content"
            android:textColor="#90ffffff"
            app:customfont="IndieFlower.ttf"
            android:text="Tap to relogin ..."
            android:textSize="16dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/logined_in_user"
            android:layout_below="@+id/tv_quick_login"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp"
            android:layout_height="wrap_content">
            <in.co.dipankar.quickandorid.views.CircleImageView
                android:id="@+id/user1"
                android:layout_width="60dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#90ffffff"
                android:layout_marginRight="35dp"
                android:src="@drawable/user1"
                android:layout_height="60dp" />
            <in.co.dipankar.quickandorid.views.CircleImageView
                android:id="@+id/user2"
                android:layout_width="60dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#90ffffff"
                android:src="@drawable/user2"
                android:layout_height="60dp" />
        </LinearLayout>
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:text="New user ?"
            app:customfont="IndieFlower.ttf"
            android:textSize="12dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>
