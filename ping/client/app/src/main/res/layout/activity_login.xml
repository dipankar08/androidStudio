<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:background="@drawable/bg_login"
        android:layout_width="match_parent"
        android:tint="#ff000000"
        android:layout_height="match_parent" />
    <ImageView
        android:layout_width="match_parent"
        android:src="#aa000000"
        android:layout_height="match_parent" />

    <!--Brand Info -->
    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:paddingBottom="60dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:background="#ee000000"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_handshake_42"
            android:layout_height="wrap_content" />
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:layout_width="wrap_content"
            android:textColor="?attr/primaryTextColor"
            app:customfont="IndieFlower.ttf"
            android:text="PING"
            android:textSize="22dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Sign in -->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/anonymous_btn"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:background="@drawable/bg_roundcorner_whiet"
            android:text="Anonymous login"/>
        <com.google.android.gms.common.SignInButton
            android:id="@+id/signInButton"
            android:layout_width="200dp"
            android:layout_marginBottom="20dp"
            android:layout_height="42dp"/>
        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>
