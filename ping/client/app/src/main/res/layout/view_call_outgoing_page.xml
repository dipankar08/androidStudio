<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22000000">

    <!-- Call View -->
    <in.co.dipankar.ping.activities.call.subviews.ViewletPeerInfoAudio
        android:id="@+id/peer_audio_info"
        android:visibility="gone"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <in.co.dipankar.ping.activities.call.subviews.ViewletPeerInfoVideo
        android:id="@+id/peer_video_info"
        android:visibility="gone"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <in.co.dipankar.quickandorid.views.StateImageButton
            android:id="@+id/toggle_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginRight="25dp"
            app:enable_src= "@drawable/ic_video_enable_white_24"
            app:enable_background="@drawable/bg_small_circle_black"
            app:disable_src= "@drawable/ic_video_disable_black_24"
            app:disable_background="@drawable/bg_small_circle_white"
            app:is_enable="true" />

        <in.co.dipankar.quickandorid.views.StateImageButton
            android:id="@+id/toggle_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginRight="25dp"
            app:enable_src= "@drawable/ic_mute_disable_white_24"
            app:enable_background="@drawable/bg_small_circle_black"
            app:disable_src= "@drawable/ic_mute_enable_black_24"
            app:disable_background="@drawable/bg_small_circle_white"
            app:is_enable="true" />

        <in.co.dipankar.quickandorid.views.StateImageButton
            android:id="@+id/toggle_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginRight="25dp"
            app:enable_src= "@drawable/ic_camera_disable_white_24"
            app:enable_background="@drawable/bg_small_circle_black"
            app:disable_src= "@drawable/ic_camera_enable_black_24"
            app:disable_background="@drawable/bg_small_circle_white"
            app:is_enable="true" />

        <in.co.dipankar.quickandorid.views.StateImageButton
            android:id="@+id/toggle_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginRight="25dp"
            app:enable_src= "@drawable/ic_speaker_white_24"
            app:enable_background="@drawable/bg_small_circle_black"
            app:disable_src= "@drawable/ic_headphone_black_24"
            app:disable_background="@drawable/bg_small_circle_white"
            app:is_enable="true" />

        <in.co.dipankar.quickandorid.views.StateImageButton
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            app:enable_src= "@drawable/ic_startcall_white_24"
            app:enable_background="@drawable/bg_small_circle_red"
            app:disable_src= "@drawable/ic_startcall_white_24"
            app:disable_background="@drawable/bg_small_circle_red"
            app:is_enable="true" />
    </LinearLayout>
</RelativeLayout>
