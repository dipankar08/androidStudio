<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_call"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <in.co.dipankar.ping.activities.callscreen.CallVideoGridView
        android:id="@+id/call_video_grid_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </in.co.dipankar.ping.activities.callscreen.CallVideoGridView>

    <in.co.dipankar.ping.activities.callscreen.CallLandingPageView
        android:id="@+id/call_landing_page_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </in.co.dipankar.ping.activities.callscreen.CallLandingPageView>

    <in.co.dipankar.ping.activities.callscreen.CallEndedPageView
        android:id="@+id/call_ended_page_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
    </in.co.dipankar.ping.activities.callscreen.CallEndedPageView>

    <in.co.dipankar.ping.activities.callscreen.CallIncomingPageView
        android:id="@+id/call_incoming_page_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
    </in.co.dipankar.ping.activities.callscreen.CallIncomingPageView>

    <in.co.dipankar.ping.activities.callscreen.CallOngoingPageView
        android:id="@+id/call_ongoing_page_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </in.co.dipankar.ping.activities.callscreen.CallOngoingPageView>

    <in.co.dipankar.ping.activities.callscreen.CallOutgoingPageView
        android:id="@+id/call_outgoing_page_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
    </in.co.dipankar.ping.activities.callscreen.CallOutgoingPageView>
</RelativeLayout>