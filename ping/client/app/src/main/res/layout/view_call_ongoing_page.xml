<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <ImageView
        android:id="@+id/backgroud_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:background="@null"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:text="Dipankar"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time"
            android:textColor="#ffffff"
            android:layout_width="fill_parent"
            android:text="5:20"
            android:gravity="right"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <!-- user banner -->
    <RelativeLayout
        android:id="@+id/peer_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/peer_back"
            android:scaleType="fitXY"
            android:tint="#50000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:padding="50dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <in.co.dipankar.quickandorid.views.CircleImageView
                android:id="@+id/peer_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="15dp"
                app:civ_border_color="@color/grayLight"
                app:civ_border_width="3dp" />
            <in.co.dipankar.quickandorid.views.CustomFontTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textColor="#ffffff"
                android:maxLines="1"
                android:textAlignment="center"
                app:customfont="Ubuntu-Regular.ttf"
                android:textSize="22dp"/>
            <in.co.dipankar.quickandorid.views.CustomFontTextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textColor="#ffffff"
                android:maxLines="3"
                android:textAlignment="center"
                app:customfont="Ubuntu-Regular.ttf"
                android:textSize="17dp"/>
        </LinearLayout>
    </RelativeLayout>



    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="40dp">
        <in.co.dipankar.quickandorid.views.StateImageButton
            android:id="@+id/toggle_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginRight="25dp"
            app:enable_src= "@drawable/ic_video_enable_white_24"
            app:enable_background="@drawable/bg_small_circle_black"
            app:disable_src= "@drawable/ic_video_disable_black_24"
            app:disable_background="@drawable/bg_small_circle_white"
            app:is_enable="true" />
        <in.co.dipankar.quickandorid.views.StateImageButton
            android:id="@+id/toggle_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginRight="25dp"
            app:enable_src= "@drawable/ic_mute_disable_white_24"
            app:enable_background="@drawable/bg_small_circle_black"
            app:disable_src= "@drawable/ic_mute_enable_black_24"
            app:disable_background="@drawable/bg_small_circle_white"
            app:is_enable="true" />
        <in.co.dipankar.quickandorid.views.StateImageButton
            android:id="@+id/toggle_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginRight="25dp"
            app:enable_src= "@drawable/ic_camera_disable_white_24"
            app:enable_background="@drawable/bg_small_circle_black"
            app:disable_src= "@drawable/ic_camera_enable_black_24"
            app:disable_background="@drawable/bg_small_circle_white"
            app:is_enable="true" />
        <in.co.dipankar.quickandorid.views.StateImageButton
            android:id="@+id/toggle_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:layout_marginRight="25dp"
            app:enable_src= "@drawable/ic_speaker_white_24"
            app:enable_background="@drawable/bg_small_circle_black"
            app:disable_src= "@drawable/ic_headphone_black_24"
            app:disable_background="@drawable/bg_small_circle_white"
            app:is_enable="true" />
        <in.co.dipankar.quickandorid.views.StateImageButton
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            app:enable_src= "@drawable/ic_startcall_white_24"
            app:enable_background="@drawable/bg_small_circle_red"
            app:disable_src= "@drawable/ic_startcall_white_24"
            app:disable_background="@drawable/bg_small_circle_red"
            app:is_enable="true" />
    </LinearLayout>

</RelativeLayout>
