<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        -->
    </style>


    <style name="TextHugeTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Radio Mirchi</item>
        <item name="android:textColor">@color/textPrimary1</item>
        <item name="customfont">OpenSans-Bold.ttf</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="TextHugeTitle.White">
        <item name="android:textColor">@color/tw__solid_white</item>
    </style>

    <style name="TextHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Radio Mirchi</item>
        <item name="android:textColor">@color/textPrimary1</item>
        <item name="customfont">OpenSans-Bold.ttf</item>
        <item name="android:textSize">22dp</item>
    </style>
    <style name="TextTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Radio Mirchi</item>
        <item name="android:textColor">@color/textPrimary1</item>
        <item name="customfont">OpenSans-Regular.ttf</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="TextSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Radio Mirchi</item>
        <item name="android:textColor">@color/textPrimary3</item>
        <item name="customfont">OpenSans-Regular.ttf</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="TextMini">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Radio mirchi</item>
        <item name="android:textColor">@color/textPrimary4</item>
        <item name="customfont">OpenSans-Regular.ttf</item>
        <item name="android:textSize">12dp</item>
    </style>



    <style name="SearchBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:hint">Type to search</item>
        <item name="android:textColorHint">@color/HintColor</item>
        <item name="android:background">@drawable/background_round_border_gray</item>
        <item name="android:drawableLeft">@drawable/ic_search_icon</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="ButtonMenu">
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>


    <style name="TextTipStyle">
        <item name="android:textSize">10dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/backgound_round_fill_red</item>
    </style>
    <style name="TextTipStyle.Live">
        <item name="android:text">Live</item>
        <item name="android:background">@drawable/backgound_round_fill_red</item>
    </style>
    <style name="TextTipStyle.LiveTv">
        <item name="android:text">Live TV</item>
        <item name="android:background">@drawable/backgound_round_fill_red</item>
    </style>
    <style name="TextTipStyle.LiveRadio">
        <item name="android:text">Live TV</item>
        <item name="android:background">@drawable/backgound_round_fill_red</item>
    </style>
    <style name="TextTipStyle.Offline">
        <item name="android:text">Offline</item>
        <item name="android:background">@drawable/backgound_round_fill_red</item>
    </style>
    <style name="TextTipStyle.Slow">
        <item name="android:text">Slow</item>
        <item name="android:background">@drawable/backgound_round_fill_red</item>
    </style>
    <style name="TextTipStyle.MostlyWorking">
        <item name="android:text">Mostly Working</item>
        <item name="android:background">@drawable/backgound_round_fill_red</item>
    </style>

    <style name="ImageIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_background_style1</item>
        <item name="android:src">@drawable/ic_back_black_32</item>
    </style>
    <style name="ImageIcon.Back">
        <item name="android:src">@drawable/ic_back_black_32</item>
    </style>
    <style name="ImageIcon.Back.White">
        <item name="android:src">@drawable/ic_back_white_32</item>
    </style>

    <style name="ImageIcon.Timer">
        <item name="android:src">@drawable/ic_timer_white_32</item>
    </style>
    <style name="ImageIcon.Timer.White">
        <item name="android:src">@drawable/ic_timer_white_32</item>
    </style>

    <style name="ImageIcon.Fev">
        <item name="android:src">@drawable/ic_love_white_32</item>
    </style>
    <style name="ImageIcon.Fev.White">
        <item name="android:src">@drawable/ic_love_white_32</item>
    </style>

    <style name="ImageIcon.Search">
        <item name="android:src">@drawable/ic_search_black_24</item>
    </style>
    <style name="ImageIcon.Search.White">
        <item name="android:src">@drawable/ic_search_black_24</item>
    </style>

    <style name="ImageIcon.Setting">
        <item name="android:src">@drawable/ic_setting_black_24</item>
    </style>
    <style name="ImageIcon.Setting.White">
        <item name="android:src">@drawable/ic_setting_black_24</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_round_border_black</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/textPrimary3</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="CardHolder">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/large</item>
        <item name="android:background">@drawable/background_round_border_gray</item>
    </style>


</resources>
