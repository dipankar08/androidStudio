<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="customfont">myfont.ttf</item>
    </style>
    <style name="Text.Title">
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Text.SubTitle">
        <item name="android:textColor">@color/subtitle_text</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="Text.HugeTitle">
        <item name="android:textColor">@color/hugetitle_text</item>
        <item name="android:textSize">30sp</item>
        <item name="customfont">myfontbold.ttf</item>
    </style>
    <style name="Text.Error">
        <item name="android:textColor">@color/errortitle_text</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Btn.PlayControl">
        <item name="android:textColor">@color/subtitle_text</item>
        <item name="android:background">#00000000</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>
