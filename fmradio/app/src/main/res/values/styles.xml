<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        -->
    </style>


    <style name="TextHugeTitle">
        <item name="android:text">Radio Mirchi</item>
        <item name="android:textColor">@color/textPrimary1</item>
        <item name="customfont">OpenSans-Bold.ttf</item>
        <item name="android:textSize">27dp</item>
    </style>

    <style name="TextTitle">
        <item name="android:text">Radio Mirchi</item>
        <item name="android:textColor">@color/textPrimary3</item>
        <item name="customfont">OpenSans-Bold.ttf</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:text">Radio Mirchi</item>
        <item name="android:textColor">@color/textPrimary4</item>
        <item name="customfont">OpenSans-Regular.ttf</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TextListSubTitle">
        <item name="android:text">Radio Mirchi</item>
        <item name="android:textColor">@color/textPrimary2</item>
        <item name="customfont">OpenSans-Bold.ttf</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="SearchBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:hint">Type to search</item>
        <item name="android:textColorHint">@color/HintColor</item>
        <item name="android:background">@drawable/background_round_border_gray</item>
        <item name="android:drawableLeft">@drawable/ic_search_icon</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="ButtonMenu">
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
</resources>
