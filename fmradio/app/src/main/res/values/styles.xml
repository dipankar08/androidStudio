<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="customfont">myfont.ttf</item>
    </style>
    <style name="Text.HomeTitle">
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">20sp</item>
        <item name="customfont">myfontbold.ttf</item>
    </style>
    <style name="Text.Title">
        <item name="android:textColor">#BDBDBD</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.PlayTitle">
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.PlayTitle.LIVE">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/background_red</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    <style name="Text.SubTitle">
        <item name="android:textColor">@color/subtitle_text</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="Text.HugeTitle">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">30sp</item>
        <item name="customfont">myfontbold.ttf</item>
    </style>
    <style name="Text.Error">
        <item name="android:textColor">@color/errortitle_text</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Text.More">
        <item name="android:textColor">@color/subtitle_text</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Text.CatergoriesItemTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#757575</item>
    </style>
    <style name="Btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Btn.PlayControl">
        <item name="android:textColor">@color/subtitle_text</item>
        <item name="android:background">#00424242</item>
    </style>



</resources>
