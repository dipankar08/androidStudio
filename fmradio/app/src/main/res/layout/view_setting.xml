<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            style="@style/ImageIcon.Back"
            />
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:id="@+id/page_title"
            style="@style/TextHugeTitle"
            android:layout_toRightOf="@+id/back"
            android:layout_alignBaseline="@id/back"
            android:text="Settings"
            android:onClick="onBack"
            />
    </RelativeLayout>
    <in.co.dipankar.quickandorid.views.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tool_bar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_radio_mirchi"
        />
    <in.co.dipankar.quickandorid.views.CustomFontTextView
        android:id="@+id/profile_title"
        style="@style/TextHugeTitle"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_image"
        android:text="Welcome user"
        />
</RelativeLayout>