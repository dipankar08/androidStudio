<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <in.co.dipankar.fmradio.ui.viewpresenter.toolbar.ToolbarView
        android:id="@+id/tool_bar"
        app:title="Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/windowLeftMargin"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <in.co.dipankar.quickandorid.views.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_radio_mirchi"
                />
            <in.co.dipankar.quickandorid.views.CustomFontTextView
                android:id="@+id/profile_title"
                style="@style/TextHeader"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Welcome!"
                />
            <LinearLayout
                android:id="@+id/settings"
                android:layout_below="@+id/stat"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <in.co.dipankar.quickandorid.views.CustomFontTextView
                    android:text="Subscription"
                    style="@style/TextHeader"
                    android:layout_marginBottom="@dimen/medium"
                    />
                <in.co.dipankar.fmradio.ui.viewpresenter.billing.BillingView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium"
                    />
                <in.co.dipankar.quickandorid.views.CustomFontTextView
                    android:text="General Settings"
                    style="@style/TextHeader"
                    android:layout_marginBottom="@dimen/medium"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/CardHolder"
                    android:layout_marginBottom="@dimen/medium"
                    >
                    <Switch
                        android:id="@+id/refresh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/medium"
                        android:text="Refresh Radio Channel List" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/internal"
                android:visibility="gone"
                android:layout_below="@+id/settings"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <in.co.dipankar.quickandorid.views.CustomFontTextView
                    android:text="Internal Settings"
                    style="@style/TextHeader"
                    android:layout_marginBottom="@dimen/medium"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/CardHolder"
                    android:layout_marginBottom="@dimen/medium"
                    >
                    <Switch
                        android:id="@+id/live_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/medium"
                        android:text="Enable TV Channel" />
                    <Switch
                        android:id="@+id/add_free"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/medium"
                        android:text="Enable Add Free Version" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>