<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/image_background_fullscreen_ftux"
        android:layout_width="match_parent"
        android:tint="#90000000"
        android:scaleType="fitXY"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        />

    <in.co.dipankar.quickandorid.views.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Please wait, Loading..."
        style="@style/TextSubTitle"
        android:textColor="#fff"
        />

    <in.co.dipankar.quickandorid.views.VersionView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="V0.1"
        style="@style/TextTitle"
        android:textColor="#fff"
        />
</RelativeLayout>