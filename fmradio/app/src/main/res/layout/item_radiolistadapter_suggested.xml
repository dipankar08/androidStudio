<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/windowLeftMargin"
    android:layout_marginRight="@dimen/small"
    android:layout_height="120dp"
    android:layout_width="150dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:elevation="10dp">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_radio_mirchi"
                />
            <in.co.dipankar.quickandorid.views.CustomFontTextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextSubTitle"
                android:textColor="#fff"
                android:layout_below="@+id/image"
                android:maxLines="2"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="@+id/root"
                app:layout_constraintRight_toRightOf="@+id/root"
                app:layout_constraintBottom_toBottomOf="@+id/root"
                android:background="#80000000"
                />
            <in.co.dipankar.quickandorid.views.CustomFontTextView
                android:id="@+id/status"
                android:text="Live"
                style="@style/TextTipStyle"
                app:layout_constraintRight_toRightOf="@+id/root"
                app:layout_constraintTop_toTopOf="@+id/root"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>