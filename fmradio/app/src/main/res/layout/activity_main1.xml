<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/home"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:id="@+id/home_title"
            android:text="My Radio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Text.HugeTitle"
            android:layout_marginLeft="@dimen/space_from_edge"
            android:layout_marginTop="@dimen/gap_between_element"
            />
        <in.peerreview.fmradioindia.ui.compactlist.CategoriesListView
            android:id="@+id/categories_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/home_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <in.peerreview.fmradioindia.ui.player.PlayerView
            android:id="@+id/player_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>



    <in.peerreview.fmradioindia.ui.SearchView
        android:id="@+id/search"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <in.peerreview.fmradioindia.ui.SplashScreen
        android:id="@+id/splash"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>