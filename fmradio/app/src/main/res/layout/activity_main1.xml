<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Splash screen -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/splash"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="100dp"
            android:background="@drawable/radio"
            />
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:id="@+id/app_name"
            style="@style/Text.Title"
            android:text="FM Radio Online"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            />
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:id="@+id/version"
            style="@style/Text.SubTitle"
            android:text="FM Radio Online"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

    <!-- HomeView -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/home"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:id="@+id/error_text"
            style="@style/Text.Error"
            android:text="This channle is not working now. Try again later."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/space_from_edge"
            android:visibility="gone"
            />
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:id="@+id/home_title"
            android:text="My Radio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/error_text"
            style="@style/Text.HugeTitle"
            android:layout_marginLeft="@dimen/space_from_edge"
            android:layout_marginTop="@dimen/space_from_edge"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/controls"
            app:layout_constraintTop_toBottomOf="@+id/home_title"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/space_from_edge"
            android:layout_width="match_parent"
            />
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/controls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:indeterminateOnly="true"/>
        <LinearLayout
            android:id="@+id/controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <ImageButton
                android:id="@+id/previous"
                style="@style/Btn.PlayControl"
                android:src="@drawable/prev" />
            <ImageButton
                android:id="@+id/play_pause"
                style="@style/Btn.PlayControl"
                android:src="@drawable/pause"/>
            <ImageButton
                android:id="@+id/next"
                style="@style/Btn.PlayControl"
                android:src="@drawable/next"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>