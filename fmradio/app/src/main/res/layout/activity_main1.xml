<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Splash screen -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/splash"
        android:visibility="gone"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="100dp"
            android:background="@drawable/radio"
            />
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:id="@+id/app_name"
            style="@style/Text.Title"
            android:text="FM Radio Online"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            />
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:id="@+id/version"
            style="@style/Text.SubTitle"
            android:text="FM Radio Online"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

    <!-- HomeView -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/home"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:id="@+id/home_title"
            android:text="My Radio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Text.HugeTitle"
            android:layout_marginLeft="@dimen/space_from_edge"
            android:layout_marginTop="@dimen/gap_between_element"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/space_from_edge"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/sliding_tabs"
            app:layout_constraintTop_toBottomOf="@+id/home_title">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/page_one"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/categories_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:id="@+id/page_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <EditText
                    android:id="@+id/search_text"
                    android:background="@drawable/background_edittext"
                    android:padding="@dimen/gap_between_element"
                    android:layout_marginEnd="@dimen/space_from_edge"
                    android:layout_marginBottom="@dimen/space_from_edge"
                    android:layout_marginStart="@dimen/space_from_edge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </android.support.v4.view.ViewPager>

        <!-- Controls-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/space_from_edge"
            android:background="#ddffffff"
            android:visibility="gone"
            >
            <in.co.dipankar.quickandorid.views.CustomFontTextView
                android:id="@+id/live"
                android:text="Live"
                style="@style/Text.PlayTitle.LIVE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                />
            <in.co.dipankar.quickandorid.views.CustomFontTextView
                android:id="@+id/now_playing_text"
                style="@style/Text.PlayTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/live"
                android:layout_marginLeft="@dimen/gap_between_element"
                />
            <ImageButton
                android:id="@+id/previous"
                android:visibility="gone"
                style="@style/Btn.PlayControl"
                app:layout_constraintEnd_toStartOf="@id/play_pause"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/prev" />
            <ImageButton
                android:id="@+id/play_pause"
                style="@style/Btn.PlayControl"
                android:src="@drawable/pause"
                app:layout_constraintEnd_toStartOf="@id/next"
                />
            <ImageButton
                android:id="@+id/next"
                android:visibility="gone"
                style="@style/Btn.PlayControl"
                android:src="@drawable/next"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.design.widget.TabLayout
            android:visibility="gone"
            android:id="@+id/sliding_tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <!-- Progress bar -->
    <ProgressBar
    android:id="@+id/progress_bar"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="parent"
    android:visibility="gone"
    android:indeterminateOnly="true"/>
</android.support.constraint.ConstraintLayout>