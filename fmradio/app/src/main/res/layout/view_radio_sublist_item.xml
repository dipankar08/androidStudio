<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:paddingRight="10dp"
    android:layout_height="130dp"
    android:layout_width="90dp">
    <in.co.dipankar.quickandorid.views.CircleImageView
        android:id="@+id/image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_radio_mirchi"
        app:civ_border_color="#ababab"
        app:civ_border_width="1dp"
        />
    <in.co.dipankar.quickandorid.views.CustomFontTextView
        android:id="@+id/text"
        android:layout_below="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Radio Mirchisjs shjhshs jhsj sjsjjsjs"
        android:maxLines="2"
        android:textAlignment="center"
        android:textSize="12dp"
        app:customfont="OpenSans-Regular.ttf"
        android:textColor="#111111"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/status"
        android:text="Live"
        android:textSize="10dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/backgound_round_fill_red"
        />
</RelativeLayout>