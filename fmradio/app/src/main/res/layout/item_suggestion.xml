<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingStart="@dimen/space_from_edge"
    android:paddingEnd="@dimen/space_from_edge"
   >
    <in.co.dipankar.quickandorid.views.CircleImageView
        android:id="@+id/row_image"
        android:src="@drawable/ic_music"
        android:layout_width="@dimen/suggestion_img_size"
        android:layout_height="@dimen/suggestion_img_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:civ_border_color="#ebf0f1"
        app:civ_border_width="1dp"
        />
    <in.co.dipankar.quickandorid.views.CustomFontTextView
        android:id="@+id/row_title"
        style="@style/Text.CatergoriesItemTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>