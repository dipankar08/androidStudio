<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/space_from_edge"
    android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:id="@+id/image"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_ftux1"
            style="@style/Image"/>
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:text="Track whats matters"
            android:id="@+id/title"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/xxlarge"
            style="@style/Text.Bold"/>
        <in.co.dipankar.quickandorid.views.CustomFontTextView
            android:text="To pair your function introduction with proper photos, you can freely and easily use an “Image” or “GIF” component to import static/dynamic photos"
            android:id="@+id/subtitle"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/medium"
            style="@style/Text"/>
</LinearLayout>