<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginRight="@dimen/gap_between_element"
    >
    <in.co.dipankar.quickandorid.views.CircleImageView
        android:id="@+id/row_image"
        android:src="@drawable/ic_music"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/row_count"
        app:civ_border_color="#ebf0f1"
        app:civ_border_width="5dp"
        />
    <in.co.dipankar.quickandorid.views.CustomFontTextView
        android:text="Title"
        android:id="@+id/row_title"
        android:textSize="10sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:maxLines="1"
        app:customfont="myfont.ttf"
        style="@style/Text" />
</LinearLayout>