<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="15dp"
    android:paddingLeft="5dp"
    android:background="@color/white200"
    android:layout_marginBottom="15dp"
    android:paddingTop="10dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white200"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="4dp"
            android:paddingLeft="0dp">
            <com.cubostecnologia.customfonttextview.CustomFontTextView
                android:id="@+id/liveindicator"
                android:text="âž¤"
                android:layout_marginRight="4dp"
                android:textSize="15dp"
                android:layout_below="@+id/name"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_alignBaseline="@+id/sl"
                android:layout_height="wrap_content"
                />
            <com.cubostecnologia.customfonttextview.CustomFontTextView
                android:id="@+id/sl"
                android:layout_toRightOf="@+id/liveindicator"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15dp" />
            <ImageView
                android:id="@+id/img"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_toRightOf="@+id/sl"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                />
            <com.cubostecnologia.customfonttextview.CustomFontTextView
                android:id="@+id/name"
                android:text="Radio Mirchi"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray400"
                android:layout_alignTop="@+id/img"
                android:layout_toRightOf="@+id/img"
                android:textSize="14.5dp" />
            <com.cubostecnologia.customfonttextview.CustomFontTextView
                android:id="@+id/count"
                android:text="10 views"
                android:textSize="9dp"
                android:layout_below="@+id/name"
                android:textColor="@color/gray200"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>