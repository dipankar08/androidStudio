<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="15dp"
    android:paddingLeft="5dp"
    android:background="?attr/primaryBackgroundColor"
    android:layout_marginBottom="15dp"
    android:paddingTop="10dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        app:cardBackgroundColor="?attr/primaryBackgroundColor"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="4dp"
            android:paddingLeft="0dp">
            <in.co.dipankar.quickandorid.views.CustomFontTextView
                android:id="@+id/liveindicator"
                android:text="âž¤"
                android:layout_marginRight="4dp"
                android:textSize="15dp"
                android:layout_below="@+id/title"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                app:customfont="Ubuntu.ttf"
                android:layout_alignBaseline="@+id/sl"
                android:layout_height="wrap_content"
                />
            <in.co.dipankar.quickandorid.views.CustomFontTextView
                android:id="@+id/sl"
                android:layout_toRightOf="@+id/liveindicator"
                android:text="1"
                app:customfont="Ubuntu.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15dp" />
            <in.co.dipankar.quickandorid.views.CircleImageView
                android:id="@+id/image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:civ_border_width="1dp"
                app:civ_border_color="?attr/borderColor"
                android:layout_toRightOf="@+id/sl"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                />
            <in.co.dipankar.quickandorid.views.CustomFontTextView
                android:id="@+id/title"
                android:text="Radio Mirchi"
                app:customfont="Ubuntu.ttf"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/primaryTextColor"
                android:layout_alignTop="@+id/image"
                android:layout_toRightOf="@+id/image"
                android:textSize="14.5dp" />
            <in.co.dipankar.quickandorid.views.CustomFontTextView
                android:id="@+id/subtitle"
                android:text="10 views"
                android:textSize="9dp"
                app:customfont="Ubuntu.ttf"
                android:layout_below="@+id/title"
                android:textColor="?attr/primaryTextColor"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>