<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <!-- backgroud -->

    <ImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/pl_images"
        android:layout_height="match_parent"/>
    <ImageView
        android:layout_width="match_parent"
        android:background="#cc000000"
        android:layout_height="match_parent"/>

    <!-- Top navigation -->
    <ImageButton
        android:id="@+id/navigation"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/pl_navigation"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/almumtitle"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_marginLeft="35dp"
        android:textColor="#fff"
        android:text="Old Songs"
        android:textSize="20dp"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/download"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/pl_search"
        android:layout_width="25dp"
        android:layout_alignParentRight="true"
        android:layout_height="25dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pl_images" />

    <!--  Title sub title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:text="Jani Dekha Hobe"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginBottom="2dp"
        android:textSize="30dp"
        android:textColor="#e0ffffff"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:text="Kishore kumar"
        android:maxLines="1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:textSize="15dp"
        android:textColor="#c0ffffff"
        android:layout_height="wrap_content" />
    <!-- EXtra Controls -->
    <LinearLayout
        android:id="@+id/holder_extra_control"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
       android:layout_centerHorizontal="true"
        android:layout_above="@+id/holder_music_control"
        android:layout_height="wrap_content">

        <in.peerreview.fmradioindia.common.views.DImageView
            android:id="@+id/vol"
            android:padding="3dp"
            custom:enabled="false"
            custom:enableBackground="@drawable/pl_volume"
            custom:disableBackground="@drawable/pl_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <in.peerreview.fmradioindia.common.views.DImageView
            android:id="@+id/restart"
            android:padding="3dp"
            custom:enabled="false"
            custom:enableBackground="@drawable/pl_refresh"
            custom:disableBackground="@drawable/pl_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <in.peerreview.fmradioindia.common.views.DImageView
            android:id="@+id/repeat"
            android:padding="3dp"
            custom:enabled="false"
            custom:enableBackground="@drawable/pl_repeat_en"
            custom:disableBackground="@drawable/pl_repeat_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Seek bar navigation -->
    <RelativeLayout
        android:id="@+id/holder_music_control"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">
        <SeekBar xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekbar"/>
        <TextView
            android:id="@+id/cur_duration"
            android:text="00:00"
            android:textColor="#a0ffffff"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/total_duration"
            android:text="05:34"
            android:textColor="#a0ffffff"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Music navigation -->
        <ImageButton
            android:id="@+id/play"
            android:background="@drawable/pl_play"
            android:layout_width="35dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_height="35dp"
            android:layout_below="@+id/seekbar"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/next"
            android:layout_toRightOf="@+id/play"
            android:background="@drawable/pl_next"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/seekbar"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/prev"
            android:layout_toLeftOf="@+id/play"
            android:background="@drawable/pl_prev"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@+id/seekbar"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</RelativeLayout>