<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <RelativeLayout
        android:id="@+id/menu_bar"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/cv_back"
            android:text="Back"
            android:layout_width="70dp"
            android:layout_height="50dp" />
        <TextView
            android:text="বাংলা গোয়েন্দা গল্প সমগ্র"
            android:layout_marginLeft="5dp"
            android:id="@+id/cv_title"
            android:textColor="@android:color/black"
            android:textSize="21dp"
            android:textAlignment="center"
            android:layout_alignBaseline="@+id/cv_back"
            android:layout_toRightOf="@+id/cv_back"
            android:layout_toLeftOf="@+id/cv_parent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/cv_parent"
            android:text="Home"
            android:textSize="15dp"
            android:layout_alignParentEnd="true"
            android:layout_width="70dp"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/menu_bar"
        android:layout_above="@+id/adView"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/page1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <in.co.dipankar.quickandorid.views.QuickListView
                android:id="@+id/quick_list1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>
        </LinearLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/page2"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#80ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <in.co.dipankar.quickandorid.views.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:src="@drawable/ic_sr"
                    android:layout_marginBottom="15dp"
                    android:layout_height="100dp" />
                <in.co.dipankar.quickandorid.views.CustomFontTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:text="Some Text"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content" />
                <in.co.dipankar.quickandorid.views.MusicPlayerView
                    android:id="@+id/player"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>
</RelativeLayout>